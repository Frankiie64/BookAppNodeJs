<main class="m-4">
    {{#if hasEditorial}}
    <div class="row mx-auto">
        <div class="col-6">
            <h4>Editoriales</h4>
        </div>
        <div class="col-6 text-end">
                <a type="button" class="btn btn-primary btn-sm" href="/editorial/crearEditorial">
                Agregar Editorial
            </a>
        </di>        
    </div>
    <div class="row mt-3 ">
        <div class="col-12">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                    <th scope="col">Nombre</th>
					<th scope="col">Teléfono</th>
                    <th scope="col">País</th>
					<th scope="col">Libros Asociados</th>
                    <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each editorial as |item|}}
                    <tr>
                        <td>{{item.name}}</td>
						<td>{{item.phone}}</td>
                        <td>{{item.pais}}</td>                      
                        <td>{{item.books.length}}</td>
                        <td class="d-flex  gap-1">
                            <a href="/editorial/editarEditorial/{{item.id}}?edit=true" class="btn btn-outline-warning btn-sm">
                                Editar
                            </a>
                            <a href="/editorial/eliminarEditorial/{{item.id}}?delete=true" class="btn btn-outline-danger btn-sm">
                                Eliminar
                            </a>
                        </td>
                    </tr>     
                    {{/each}}                                              
                </tbody>
            </table>
        </div>
    </div>
    {{else}}
        <div class="alert alert-warning" role="alert">
            <div class="row">
                <div class="col-6 mx-auto">
                    Todavía no sea registrado ninguna editorial.
                </div>
                <div class="col-6 text-end">
                     <a type="button" class="btn btn-primary btn-sm" href="/editorial/crearEditorial">
                        Agregar Editorial
                    </a>
                </div>
            </div>   
            <div class="row">
                <img style="width:auto; height:20em; " class="img-fluid mx-auto" src="https://mackmediagroup.com/wp-content/uploads/2018/01/web-design.png" alt='EditorialsNotFound'/>
            </div>
        </div>
    {{/if}}
</main>