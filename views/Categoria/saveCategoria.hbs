<main class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    {{#if editMode}}Edición{{else}}Creación{{/if}} de categoria
                </div>
                <div class="card-body">

                    <form method="POST" action="/categoria/{{#if editMode}}editarCategoria{{else}}crearCategoria{{/if}}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre de la categoria:</label>
                            <input required type="text" class="form-control" id="name" name="Name" value="{{#if editMode}}{{categoria.name}}{{/if}}" />
                        </div>
						<div class="mb-3">
							<div class="form-floating">
								<textarea required class="form-control" placeholder="describe la categoria" id="description"
								name="Description" id="description" style="height: 150px;" >{{#if editMode}}{{categoria.description}}{{/if}}</textarea>
								<label for="description">Descripción</label>
							</div>          
						</div> 
                        {{#if editMode}}
                            <input type="hidden" name="Id" value="{{categoria.id}}">
                        {{/if}}
                        <div class="row-col-12 text-end">
                            <button type="submit" class="btn btn-primary">{{#if editMode}}Editar{{else}}Crear{{/if}}</button>
                            <a href="/categoria" type="button" class="btn btn-warning">volver atras</a>
                        </div>                    
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
