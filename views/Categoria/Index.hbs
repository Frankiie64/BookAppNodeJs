<main class="m-4">
    {{#if hasCategoria}}
    <div class="row mx-auto">
        <div class="col-6">
            <h4>Categorias</h4>
        </div>
        <div class="col-6 text-end">
            <a type="button" class="btn btn-primary btn-sm" href="/categoria/crearCategoria">
                Agregar Categorias
            </a>
            </di>
        </div>
        <div class="row mt-3 ">
        {{#each categoria as |item|}}
            <div class="col-4 mt-2">
                <div class="card shadow" style="min-height:15rem ;">
                    <div class="card-body ">
                        <h5 class="card-title">{{item.name}}</h5>
                        <p class="card-text">{{item.description}}</p>
                        <p class="card-text"> Libros Asociados: {{item.books.length}}</p>
                        <div class="d-flex justify-content-evenly">
                            <a href="/categoria/editarCategoria/{{item.id}}?edit=true" class="btn btn-outline-warning">Editar</a>
                            <a href="/categoria/eliminarCategoria/{{item.id}}?delete=true" class="btn btn-outline-danger">Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
        </div>
        {{else}}
        <div class="alert alert-warning" role="alert">
            <div class="row">
                <div class="col-6 mx-auto">
                    Todav√≠a no has creado ninguna categoria.
                </div>
                <div class="col-6 text-end">
                    <a type="button" class="btn btn-primary btn-sm" href="/categoria/crearCategoria">
                        Agregar categoria
                    </a>
                </div>
            </div>
            <div class="row">
                <img style="width:auto; height:20em; " class="img-fluid mx-auto"
                    src="https://mackmediagroup.com/wp-content/uploads/2018/01/web-design.png"
                    alt='CategoriasNotFound' />
            </div>
        </div>
        {{/if}}
</main>